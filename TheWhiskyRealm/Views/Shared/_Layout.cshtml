<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TheWhiskyRealm</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TheWhiskyRealm.styles.css" asp-append-version="true" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TheWhiskyRealm</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown" onmouseover="showWhiskyDropdownMenu()" onmouseleave="hideWhiskyDropdownMenu()">
                            <a class="nav-link dropdown-toggle" href="#" id="whiskyDropdown" role="button" aria-expanded="false">
                                Whisky
                            </a>
                            <ul class="dropdown-menu" id="whiskyDropdownMenu" aria-labelledby="whiskyDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Whisky" asp-action="All">All</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Whisky" asp-action="Add">Add</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown" onmouseover="showEventDropdownMenu()" onmouseleave="hideEventDropdownMenu()">
                            <a class="nav-link dropdown-toggle" href="#" id="eventDropdown" role="button" aria-expanded="false">
                                Events
                            </a>
                            <ul class="dropdown-menu" id="eventDropdownMenu" aria-labelledby="eventDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Event" asp-action="Index">All</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Event" asp-action="PastEvents">Past</a></li>
                            </ul>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            @DateTime.Now.Year - TheWhiskyRealm
        </div>
    </footer>
    @Html.AntiForgeryToken()
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

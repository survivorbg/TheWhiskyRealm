@model MyCollectionPagination
@{
}
<style>
    ul[role='list'],
    ol[role='list'] {
        list-style: none;
        padding: 0px;
        margin: 0px;
    }

    .card {
        border-radius: 6px;
        overflow: hidden;
        width: 300px;
        position: relative;
        color: white;
        aspect-ratio: 1/1.5;
    }

        .card .img-bg {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 300ms linear;
        }

        .card:hover .img-bg {
            transform: scale(1.3);
        }

        .card .content {
            position: absolute;
            left: 0px;
            bottom: -210px;
            width: 100%;
            padding: 12px;
            background: rgb(2, 0, 36);
            background: linear-gradient( 180deg, rgba(2, 0, 36, 0) 0%, rgba(2, 0, 36, 0.7222222222222222) 30%, rgba(2, 0, 36, 1) 60% );
            transition: bottom 300ms linear;
        }

            .card .content .meta {
                display: grid;
                grid-template-columns: 1fr 1fr 1fr;
                gap: 2px;
                text-align: center;
                margin-bottom: 12px;
            }

            .card .content .title {
                font-size: 22px;
                text-align: center;
            }

            .card .content .desc {
                height: 144px;
                overflow: hidden;
                margin-top: 10px;
            }

        .card:hover .content {
            bottom: 0px;
        }

    .pagination {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
    }

        .pagination a {
            text-decoration: none;
            padding: 5px 10px;
            margin: 0 5px;
            border: 1px solid #ccc;
            border-radius: 4px;
            color: #333;
        }

            .pagination a:hover {
                background-color: #f5f5f5;
            }
</style>
<div class="row">
    @foreach (var whisky in Model.Whiskies)
    {
        string ageProp = (whisky.Age != null) ? (@whisky.Age + " Y.O.") : "N/A";

        <article class="card">
            <img src="~/images/1697536046IMG-1694.jpg"
                 alt="" class="img-bg">

            <div class="content">
                <ul class="meta" role="list">
                    <li class="meta-item">@ageProp</li>
                    <li class="meta-item">@whisky.ABV %</li>
                    <li class="meta-item">@whisky.DistilleryName</li>
                </ul>

                <h2 class="title">@whisky.Name</h2>
                <p class="desc">@whisky.Description</p>
                <a href="@Url.Action("Details", "Whisky", new { id = whisky.Id })" class="btn btn-primary">See More</a>
            </div>
        </article>
    }
    <div class="pagination">
        @if (Model.page > 1)
        {
            <a asp-controller="Whisky" asp-action="MyCollection" asp-route-page="@(Model.page - 1)">Previous</a>
        }
        @if (Model.allWhiskies > Model.page * Model.pageSize)
        {
            <a asp-controller="Whisky" asp-action="MyCollection" asp-route-page="@(Model.page + 1)">Next</a>
        }
    </div>
</div>

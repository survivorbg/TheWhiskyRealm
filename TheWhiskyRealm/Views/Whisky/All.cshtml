@model IEnumerable<AllWhiskyModel>

@{
    ViewData["Title"] = "All Whiskies";
    int defaultYears = 3;
}
<style>
    body {
        font-family: 'Lora', serif;
    }

    .card {
        display: flex;
        flex-direction: column;
        height: 100%;
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden; 
    }

        .card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5); 
            z-index: 1; 
            opacity: 0; 
            transition: opacity 0.3s ease; 
        }

        .card:hover::before {
            opacity: 1; 
        }

        .card:hover {
            transform: scale(1.05); 
        }

    .card-body {
        flex-grow: 1;
        position: relative;
        z-index: 2; 
    }

    
    .details-button {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: goldenrod;
        color: white;
        padding: 8px 16px;
        border: none;
        border-radius: 5px;
        opacity: 0;
        transition: opacity 0.3s ease, transform 0.3s ease;
    }

    .card:hover .details-button {
        opacity: 1;
    }

    .whisky-type {
        font-style: italic;
    }
</style>

<div class="container">
    <h1 class="text-center">All Whiskies</h1>
    <div class="row">
        @foreach (var whisky in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card text-center">
                    <img src="~/images/1697536046IMG-1694.jpg" class="card-img-top" alt="Whisky Image">
                    <div class="card-body">
                        <h5 class="card-title">@whisky.Name</h5>
                        <p class="card-text whisky-type">@whisky.WhiskyType</p>
                        @if (whisky.Age.HasValue)
                        {
                            <p class="card-text">
                                Age: @whisky.Age YO
                            </p>
                        }
                        <p class="card-text">ABV: @whisky.AlcoholPercentage%</p>
                        <p class="card-text">Reviews: @whisky.Reviews</p>
                        <button class="details-button" onclick="window.location.href='@Url.Action("Details", "Whisky", new { id = whisky.Id })'">See More</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

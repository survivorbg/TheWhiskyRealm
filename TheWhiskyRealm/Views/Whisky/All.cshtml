@model IEnumerable<AllWhiskyModel>

@{
    ViewData["Title"] = "All Whiskies";
}
<link rel="stylesheet" type="text/css" href="~/css/Whisky/whisky-all.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="~/js/Whisky/loadMoreWhiskies.js"></script>
<script src="~/js/Whisky/scrollFunction.js"></script>

<select name="sortOrder" id="sortOrder" class="selectpicker">
        <option value="recent">Recent</option>
        <option value="oldest">Oldest</option>
        <option value="mostReviewed">Most Reviews</option>
        <option value="abv">Highest ABV</option>
        <option value="type">Type</option>
    </select>

<div class="container" id="whiskiesContainer">
    <h1 class="text-center">All Whiskies</h1>
    <div class="row" id="whiskyRow">
        @foreach (var whisky in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card text-center">
                    <img src="@whisky.ImageURL" class="card-img-top" alt="Whisky Image">
                    <div class="card-body">
                        <h5 class="card-title">@whisky.Name</h5>
                        <p class="card-text whisky-type">@whisky.WhiskyType</p>
                        @if (whisky.Age.HasValue)
                        {
                            <p class="card-text">
                                Age: @whisky.Age YO
                            </p>
                        }
                        <p class="card-text">ABV: @whisky.AlcoholPercentage%</p>
                        <p class="card-text">Reviews: @whisky.Reviews</p>
                        <button class="details-button" onclick="window.location.href='@Url.Action("Details", "Whisky", new { id = whisky.Id })'">See More</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<button onclick="topFunction()" id="myBtn" title="Go to top">Top</button>


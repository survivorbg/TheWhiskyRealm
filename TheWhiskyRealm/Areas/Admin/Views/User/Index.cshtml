@model UserIndexViewModel
<a asp-area="Admin" asp-controller="User" asp-action="Add" class="btn btn-primary">Add new User</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Role</th>
            <th>DateOfBirth</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Users)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Username
                </td>
                <td>
                    @item.Role
                </td>
                <td>
                    @item.DateOfBirth.ToShortDateString()
                </td>
                <td>
                    <a asp-area="Admin" asp-controller="User" asp-action="Info" asp-route-id="@item.Id" class="btn btn-outline-secondary">Info</a>
                    <a asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    Page @Model.CurrentPage of @Model.TotalPages
    <a asp-action="Index" asp-route-currentPage="@(Model.CurrentPage - 1)" class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : "")">Previous</a>
    <a asp-action="Index" asp-route-currentPage="@(Model.CurrentPage + 1)" class="btn btn-primary @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">Next</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

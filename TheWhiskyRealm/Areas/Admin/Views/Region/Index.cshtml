@model RegionIndexViewModel
<a asp-area="Admin" asp-controller="Region" asp-action="Add" class="btn btn-primary">Add new Region</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Country</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Regions)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.CountryName
                </td>
                <td>
                    <a asp-area="Admin" asp-controller="Region" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <a asp-area="Admin" asp-controller="Region" asp-action="Info" asp-route-id="@item.Id" class="btn btn-outline-secondary">Info</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    Page @Model.CurrentPage of @Model.TotalPages
    <a asp-action="Index" asp-route-currentPage="@(Model.CurrentPage - 1)" class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : "")">Previous</a>
    <a asp-action="Index" asp-route-currentPage="@(Model.CurrentPage + 1)" class="btn btn-primary @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">Next</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
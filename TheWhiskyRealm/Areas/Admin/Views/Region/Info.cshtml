@model RegionInfoViewModel

<style>
    .region-name {
        font-weight:900;
        text-decoration:underline;
        font-style:italic;
        color:black;
    }
</style>
<h2>Distilleries in the Region: <span class="region-name">@Model.Name</span> :</h2>


@if (Model.Distilleries.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Year Founded</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Distilleries)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.YearFounded
                    </td>
                    <td>
                        <a asp-area="Admin" asp-controller="Distillery" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                        <a asp-area="Admin" asp-controller="Distillery" asp-action="Info" asp-route-id="@item.Id" class="btn btn-outline-secondary">Info</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>This region has no related data</p>
}

<a asp-area="Admin" asp-controller="Region" asp-action="Index" class="btn btn-primary">Back</a>
